@model Application.ViewModels.ReturnRateConfig.ReturnRateConfgViewModel

@{
    ViewData["Title"] = "Configuración de Tasa de Retorno";
}

<div class="container my-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-header bg-light">
            <h2 class="h5 mb-0 text-center">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Save" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="MinRate" class="form-label"></label>
                    <input asp-for="MinRate" class="form-control" />
                    <span asp-validation-for="MinRate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxRate" class="form-label"></label>
                    <input asp-for="MaxRate" class="form-control" />
                    <span asp-validation-for="MaxRate" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Atras" class="btn btn-outline-secondary">Volver atrás</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>