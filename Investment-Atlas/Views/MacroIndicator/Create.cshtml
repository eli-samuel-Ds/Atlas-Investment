@model Application.ViewModels.MacroIndicador.MacroIndicadorCreateViewModel
@{
    ViewData["Title"] = "Crear Macroindicador";
}
<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width: 450px;">
        <div class="card-header text-center bg-primary text-white">
            <h4 class="mb-0">Crear Macroindicador</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <div class="text-danger small">
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Weight" class="form-label"></label>
                    <input asp-for="Weight" class="form-control" min="0.0001" step="0.0001" asp-format="{0:F4}" />
                    <small class="text-muted">Total existente: @Model.ExistingTotalWeight</small>
                    <div class="text-danger small">
                        <span asp-validation-for="Weight"></span>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="IsHigherBetter" class="form-check-input" />
                    <label asp-for="IsHigherBetter" class="form-check-label"></label>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="MacroIndicadores" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>
