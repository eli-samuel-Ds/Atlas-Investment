@model Application.ViewModels.SimulationMacroIndicator.SimulationMacroIndicatorCreateViewModel
@{
    ViewData["Title"] = "Agregar Macroindicador a Simulación";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width: 450px;">
        <div class="card-header text-center bg-primary text-white">
            <h4 class="mb-0">Agregar Macroindicador a Simulación</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="MacroIndicatorId" class="form-label">Macroindicador</label>
                    <select asp-for="MacroIndicatorId" asp-items="@(new SelectList(Model.AvailableMacroIndicators, "Id", "Name"))" class="form-control"></select>
                    <div class="text-danger small"><span asp-validation-for="MacroIndicatorId"></span></div>
                </div>
                <div class="mb-3">
                    <label asp-for="Weight" class="form-label"></label>
                    <input asp-for="Weight" class="form-control" min="0.0001" step="0.0001" asp-format="{0:F4}" />
                    <small class="text-muted">Total existente: @Model.ExistingTotalWeight</small>
                    <div class="text-danger small"><span asp-validation-for="Weight"></span></div>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Simulation" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-success">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>