@model Application.ViewModels.SimulationMacroIndicator.SimulationMacroIndicatorEditViewModel
@{
    ViewData["Title"] = "Editar Peso de Simulación";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width: 450px;">
        <div class="card-header text-center bg-warning text-dark">
            <h4 class="mb-0">Editar Peso de Simulación</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label class="form-label">Macroindicador</label>
                    <input value="@Model.MacroIndicatorName" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Weight" class="form-label"></label>
                    <input asp-for="Weight" class="form-control" min="0.0001" step="0.0001" asp-format="{0:F4}" />
                    <small class="text-muted">Total sin este: @Model.OtherTotalWeight</small>
                    <div class="text-danger small"><span asp-validation-for="Weight"></span></div>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Simulation" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>