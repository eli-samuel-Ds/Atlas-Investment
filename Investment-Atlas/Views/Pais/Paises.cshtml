@model Application.ViewModels.Country.CountryListViewModels
@{
    ViewData["Title"] = "Listado de Países";
}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">Listado de Países</h2>
        <a asp-action="Create" class="btn btn-primary">Crear País</a>
    </div>

    <div class="row g-4">
        @foreach (var country in Model.Countries)
        {
            <div class="col-12 col-sm-6 col-lg-4 d-flex">
                <div class="card shadow-sm flex-fill">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@country.Name</h5>
                        <p class="card-text mb-1"><strong>ISO:</strong> @country.IsoCode</p>
                        <p class="text-muted small mb-3">ID: @country.Id</p>
                        <div class="mt-auto d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
