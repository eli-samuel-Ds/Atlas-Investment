@model Application.ViewModels.Country.CountryCreateViewModel
@{
    ViewData["Title"] = "Crear País";
}
<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm w-100" style="max-width: 450px;">
        <div class="card-header text-center bg-primary text-white">
            <h4 class="mb-0">Crear País</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <div class="text-danger small">
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="IsoCode" class="form-label"></label>
                    <input asp-for="IsoCode" class="form-control" />
                    <div class="text-danger small">
                        <span asp-validation-for="IsoCode"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Paises" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>
